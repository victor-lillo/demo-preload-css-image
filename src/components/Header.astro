---
import { NAVS } from '@/config'
import Logo from '@/components/icons/Logo.astro'

const currentPath = Astro.url.pathname
const lastSlashRegex = /\/$/
const normalizedCurrentPath = currentPath.replace(lastSlashRegex, '')
---

<header>
  {
    NAVS.map(({ accessibleText, href, name }) => {
      const isSelected = href.length > 1 && normalizedCurrentPath === href
      return (
        <a
          href={href}
          class:list={[
            {
              selected: isSelected,
              logo: href === '/',
              link: href !== '/',
            },
          ]}
        >
          {accessibleText && <span class='visually-hidden'>{accessibleText}</span>}
          {href === '/' ? <Logo /> : name}
        </a>
      )
    })
  }
</header>

<style>
  header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    margin: auto;
    gap: 1rem;
  }

  .link {
    font-size: 1.2rem;
    position: relative;
  }

  @media (width > 48rem) {
    .link {
      font-size: 1.4rem;
    }
  }

  .link::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: -6px;
    margin-left: auto;
    margin-right: auto;
    z-index: -1;
    height: 3px;
    background-color: var(--color-accent-1);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.35s ease-out;
  }

  .selected::after {
    transform: scaleX(1);
  }

  @media (hover: hover) {
    .logo:hover {
      color: var(--color-accent-1);
    }
  }
</style>
